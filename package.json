{
  "name": "shabbat-logic",
  "version": "1.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "James Fulford <james.fulford@outlook.com>",
  "license": "MIT",
  "private": false,
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn ci"
    }
  },
  "nyc": {
    "include": "src",
    "exclude": "**/*.spec.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "luxon": "1.8.0",
    "suncalc": "1.8.0"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "ci": "yarn test --ci",
    "report": "yarn test --coverage",
    "scan": "yarn report && bash scripts/scan.sh",
    "tdd": "yarn test --watch"
  },
  "devDependencies": {
    "@types/jest": "24.0.13",
    "@types/luxon": "1.13.0",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "sonarqube-scanner": "2.1.2",
    "ts-jest": "24.0.2",
    "tslint": "5.16.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.4.5"
  }
}
